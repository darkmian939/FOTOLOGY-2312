@{
    Layout = null; // Esto evita que utilices un diseño predeterminado si lo tienes configurado
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulario de Contacto</title>
    <link rel="stylesheet" href="~/css/stylecontacto.css" />
</head>
<body>
    <header class="header">
        <div class="logo">
            <img src="~/Recursos/LOGOA.png" alt="Logo" />
        </div>
        <nav>
            <ul class="linksnav">
                <li><a href="@Url.Action("PaginaCliente", "Home")">Inicio</a></li>
                <li><a href="@Url.Action("PaginaFotografo", "Home")">Fotografos</a></li>
                <li><a href="@Url.Action("PaginaCategorias", "Home")">Categorias</a></li>
                <li><a href="@Url.Action("PaginaAyuda", "Home")">Ayuda</a></li>
                <li><a href="@Url.Action("PaginaContacto", "Home")">Contacto</a></li>
            </ul>
        </nav>
        <a class="btn" href="@Url.Action("Index", "Home")"><button>Cerrar Sesion</button></a>
    </header>

    <div class="formulario">
        <h2>Contacto</h2>
        <form action="enviar.php" method="post">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required />

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" required />

            <label for="mensaje">Mensaje:</label>
            <textarea id="mensaje" name="mensaje" required></textarea>

            <input type="submit" value="Enviar" />
        </form>
    </div>
</body>
</html>

